<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.usjt.desmob.geodata.MainActivity">

    <!--layout_weight - ocupado o "resto do espaÃ§o -->
    <EditText
        android:id="@+id/txtContinente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hintContinente"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_busca"
        android:onClick="listarPaises"/>

</LinearLayout>
